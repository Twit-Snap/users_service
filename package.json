{
  "name": "users_service",
  "version": "1.0.0",
  "description": "Users service",
  "main": "src/app.ts",
  "scripts": {
    "start": "NODE_ENV=production node dist/app.js",
    "dev": "docker-compose up -d db && NODE_ENV=development nodemon src/app.ts",
    "build": "tsc",
    "lint": "prettier --write \"src/**/*.ts\" && eslint src/",
    "test": "jest --maxWorkers=1 --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "Express",
    "PostgreSQL"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.6.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.7.1",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^16.11.7",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "node-mocks-http": "^1.16.0",
    "nodemon": "^2.0.15",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "tsc --noEmit"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
